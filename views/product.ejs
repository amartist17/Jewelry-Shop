<script>
    $(document).ready(function() {
           
        
            $('.addToCart').click(function(event){
                event.preventDefault();
                let size = $('.size-input').val()
                let price = $(this).attr("data-price")
                let name = $(this).attr("data-name")
                let productId = $(this).attr("data-id")
                

                if (size === '') {
                // Add a red border
                $('.size-input').css('border', '1px solid red');
                
                // Add a tooltip
                $('.size-input').attr('title', 'This field is required');
                return
            }

                let charm=$('.charm-input').val()
                let data
                if(charm !== undefined){
                    data = {productId,name,price, size, charm}
                }else{
                    data = {productId,name,price, size}
                }
                // console.log(data)
                // console.log($(this).attr("data-id"))
                $.ajax({
                    type: "POST",
                    url: window.location.origin + "/api/add-to-cart",
                    data: data,
                    success: ()=>{
                        location.reload();
                    },
                    });
            })
        });
    
    

</script>
